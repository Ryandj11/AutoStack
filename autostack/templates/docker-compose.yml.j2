services:
  backend:
    build:
      context: .
      dockerfile: Dockerfile
    ports:
      - "8000:8000"
    volumes:
      - ./backend:/app
    environment:
      - PYTHONUNBUFFERED=1

{% if frontend != 'none' %}
  frontend:
    build:
      context: ./client
      dockerfile: Dockerfile.frontend
    ports:
      - "5173:5173"
    volumes:
      - ./client:/app
      - /app/node_modules
{% endif %} 